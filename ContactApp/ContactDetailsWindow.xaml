<Window x:Class="ContactApp.ContactDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContactApp"
        mc:Ignorable="d"
        Title="NewContactWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10" >
            <Label>Name</Label>  <TextBox x:Name="nameTextBox"
                     Margin="0,0,0,5"/>
            <Label>Email</Label>
            <TextBox x:Name="emailTextBox"
                     Margin="0,0,0,5"/>
            <Label>Phone</Label>
            <TextBox x:Name="phoneTextBox"
                     Margin="0,0,0,5"/>
            <Button x:Name="updateButton" Content="Update"  Margin="0,0,0,5"
                    Click="UpdateButton_Click"/>
            <Button x:Name="deleteButton" Content="Delete" Background="Red"
                    Click="DeleteButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
